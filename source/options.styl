@import "stylesheets/reset.styl"
@import "stylesheets/checkbox.styl"
@import "stylesheets/saveButton.styl"

html
  min-width: 600px

body
  max-width: 500px
  margin: auto
  padding-top: 1em

h1
  font-weight: 300
  font-size: 2em
  margin-bottom: 0.5em
  user-select: none

.submit
  padding-top: 2em

#status
  font-size: 0.7em
  padding-top: 20px

.site-selector
  background-color: #eee
  border: none
  border-radius: 2px
  color: rgba(0, 0, 0, 0.8)
  cursor: text
  display: inline-block
  font-weight: 300
  font-size: 1em
  height: 1.3em
  line-height: 1
  padding-left: 0.2em
  position: relative
  transition: ease background 0.2s
  vertical-align: middle
  width: 70%
  z-index: 1
  &:hover, &:focus
    background: #ddd

.emoji-label
  margin: 0.2em

.remove-button
  border: none
  color: rgba(0, 0, 0, 0.4)
  cursor: pointer
  font-size: 0.5em
  transition: ease color 0.2s
  vertical-align: middle
  &:hover
    color: rgba(0, 0, 0, 0.8)
