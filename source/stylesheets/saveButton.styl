.save
  position: relative
  font-size: 0.8em
  font-weight: 200
  color: white
  cursor: pointer
  background-color: #2196F3
  border: none
  border-radius: 2px
  padding: 10px 30px 10px 30px
  text-decoration: none
  transition: all 0.2s

  &:hover, &:focus
    opacity: 0.9

  &:active
    opacity: 0.7

  &[disabled]
    cursor: not-allowed
    opacity: 0.8

  &.outline
    background: none
    color: #2196F3

  &.outline:hover,
  &.outline:focus
      background: #2196F3
      color: white
