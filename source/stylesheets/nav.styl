nav
  position: absolute
  margin: 0
  padding: 0
  user-select: none
  -moz-user-select: none
  top: 0
  left: 0
  width: 100%

  ul
    position: absolute
    top: 0
    left: 0
    list-style: none
    margin: 0
    padding: 5px 0 5px 10px
    width: 100%
    background-color: black

  li
    display: inline
    padding: 10px

  a
    color: white
    font-weight: 200
    text-decoration: none
    opacity: 0.5
    &:hover
      opacity: 0.7
    &:hover.active
      opacity: 1
