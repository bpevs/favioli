.override button.emoji
  background: #eee
  border: none
  border-radius: 2px
  cursor: pointer
  font-size: 1rem
  height: 32px
  line-height: 1
  margin-top: 0
  margin-left: 10px
  padding: 4px 0
  transition: background ease 0.2s
  user-select: none
  vertical-align: middle
  width: 1.3rem

.override button.emoji:hover,
.override button.emoji:focus
  background: #ddd

.override .filter
  background-color: #eee
  border: none
  border-radius: 2px
  color: rgba(0, 0, 0, 0.8)
  cursor: text
  display: inline-block
  font-weight: 300
  font-size: 1em
  height: 1.3em
  line-height: 1
  padding-left: 0.2em
  position: relative
  transition: ease background 0.2s
  vertical-align: middle
  width: 75%
  z-index: 1
  &:hover, &:focus
    background: #ddd
.override .remove
  background-color: transparent
  border: none
  color: rgba(0, 0, 0, 0.4)
  cursor: pointer
  font-size: 0.5em
  transition: ease color 0.2s
  vertical-align: middle
  &:hover
    color: rgba(0, 0, 0, 0.8)
